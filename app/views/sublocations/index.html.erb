<p id="notice"><%= notice %></p>

<h1>Listing Sublocations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sublocations.each do |sublocation| %>
      <tr>
        <td><%= sublocation.name %></td>
        <td><%= sublocation.location_id %></td>
        <td><%= link_to 'Show', sublocation %></td>
        <td><%= link_to 'Edit', edit_sublocation_path(sublocation) %></td>
        <td><%= link_to 'Destroy', sublocation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

